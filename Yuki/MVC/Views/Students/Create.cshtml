@model StudentModel

@* Generated from Custom Template. *@
@* Model namespace using directive should be added to _ViewImports.cshtml. *@

@{
    var containerDivClass = "container";
    var dateTimePickerClass = "datetimepicker";
}
@{
    ViewData["Title"] = "Student Create";
}

<div class="@containerDivClass">
    <h1>@ViewData["Title"]</h1>
    <hr />
</div>

<div class="@containerDivClass">
    @if (TempData["Message"] is not null)
    {
    <p class="text-danger">
        @TempData["Message"]
    </p>
    }
    <form asp-action="Create" autocomplete="off">
		@Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row mb-3">
            <label asp-for="Name" class="col-2 col-form-label fw-bold"></label>
			<div class="col-10">
			    <input asp-for="Student.Name" class="form-control" />
				<span asp-validation-for="Student.Name" class="text-danger"></span>
			</div>
        </div>
        <div class="row mb-3">
            <label asp-for="Surname" class="col-2 col-form-label fw-bold"></label>
			<div class="col-10">
			    <input asp-for="Student.Surname" class="form-control" />
				<span asp-validation-for="Student.Surname" class="text-danger"></span>
			</div>
        </div>
        <div class="row mb-3">
            <label asp-for="BirthDate" class="col-2 col-form-label fw-bold"></label>
			<div class="col-10">
				<input asp-for="Student.BirthDate" class="form-control @dateTimePickerClass" type="text" />
				<span asp-validation-for="Student.BirthDate" class="text-danger"></span>
			</div>
        </div>
        <div class="row mb-3">
            <label asp-for="Gpa" class="col-2 col-form-label fw-bold"></label>
			<div class="col-10">
			    <input asp-for="Student.Gpa" class="form-control" />
				<span asp-validation-for="Student.Gpa" class="text-danger"></span>
			</div>
        </div>

@* Can be uncommented and used for many to many relationships. ManyToManyStudent may be replaced with the related entiy name in the controller and views. *@
        @*
        <div class="row mb-3">
            <label asp-for="ManyToManyStudentIds" class="col-2 col-form-label fw-bold"></label>
	        <div class="col-10">
		        <select multiple asp-for="ManyToManyStudentIds" class="form-select" asp-items="ViewBag.ManyToManyStudentIds"></select>
		        <span asp-validation-for="ManyToManyStudentIds" class="text-danger"></span>
	        </div>
        </div>
        *@

        <hr />  
        <div class="row mb-3">
			<div class="offset-2 col-10">
                <button type="submit" class="btn btn-primary">Save</button>
				&nbsp;&nbsp;
                <button type="reset" class="btn btn-outline-primary">Reset</button>
				&nbsp;&nbsp;
				<a asp-action="Index">Back to List</a>
			</div>
        </div>
    </form>
</div>  

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_DateTimePicker" />
}
